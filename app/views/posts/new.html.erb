<section>
    <h2>New post</h2>
    <% if @post.errors.any? %>
        <div>
            <% @post.errors.full_messages.each do |message| %>
               <p> <%= message %> </p>
            <% end %>
        </div>
    <% end %>

    <%= form_with model: @post, url: user_posts_path(@user) do |form| %>
        <div>
            <%= form.label :title, class: 'form-label' %>
            <%= form.text_field :title, required: true, autofocus: true, class: 'form-input' %>
        </div>

        <div>
            <%= form.label :text, class: 'form-label' %>
            <%= form.text_field :text, required: true, autofocus: true, class: 'form-input' %>
        </div>
        <%= form.submit "submit" %>
    <% end %>
</section>