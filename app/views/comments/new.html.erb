<div class="mt-4">
<h3 class="text-lg font-medium mb-2">Add a comment:</h3>
<%= form_for [@post, Comment.new], url: "/comments/#{ @post.id }" do |form| %>
  <%= form.text_area :text, placeholder: "Add comment", class: "w-full rounded-lg p-2 border-gray-300 mb-4 focus:outline-none focus:ring-2 focus:ring-blue-600" %>
  <%= form.submit "Add Comment", class: "bg-blue-600 hover:bg-blue-700 text-white  py-2 px-4 transition-all duration-200" %>
<% end %>
</div>